version: '2'
services:
<%_ switch(databaseType) {
    case 'mysql': _%>
    db:
        container_name: db
        image: mysql:8.0.19
        environment:
            MYSQL_ROOT_PASSWORD: root
            MYSQL_DATABASE: jhipster
        ports:
            - "3308:3306"
    <%_ break;
    case 'mssql': _%>
    db:
        container_name: db
        image: mcr.microsoft.com/mssql/server
        environment:
            SA_PASSWORD: "Password!12"
            ACCEPT_EULA: "Y"
    <%_ break;
    case 'postgres': _%>
    db:
        container_name: db
        image: postgres:latest
        restart: always
        environment:
            POSTGRES_DB: jhipster
            POSTGRES_USER: postgres
        ports:
            - "5432"
    <%_ break;
} _%>
    <%= baseName.toLowerCase() %>-app:
        image: <%= baseName.toLowerCase() %>
    <%_ if (databaseType !== 'sqllite' && databaseType !== 'oracle') { _%>
        depends_on:
            - db
        build:
            context: ../
            dockerfile: src/<%= solutionName %>/Dockerfile
    <%_ } _%>
        ports:
            - 80:80
