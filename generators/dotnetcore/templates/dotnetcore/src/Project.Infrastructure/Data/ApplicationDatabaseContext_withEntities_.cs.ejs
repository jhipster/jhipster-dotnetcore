                    "<%= joinEntityClassNamePascalizedPlural %>",
                    x => x.HasOne<<%= nonOwnerRelationshipFieldName %>>().WithMany(),
                    x => x.HasOne<<%= ownerRelationshipFieldName %>>().WithMany());

                            <%_ }
